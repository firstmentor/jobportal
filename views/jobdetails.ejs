<%- include('header.ejs') %>

<!-- Header End -->
<div class="container-xxl py-5 bg-dark page-header mb-5">
  <div class="container my-5 pt-5 pb-4">
    <h1 class="display-3 text-white mb-3 animated slideInDown">Job Detail</h1>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb text-uppercase">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item text-white active" aria-current="page">
          Job Detail
        </li>
      </ol>
    </nav>
  </div>
</div>
<!-- Header End -->

<!-- Job Detail Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
  <div class="container">
    <div class="row gy-5 gx-4">
      <div class="col-lg-8">
        <div class="d-flex align-items-center mb-5">
          <img
            class="flex-shrink-0 img-fluid border rounded"
            src="<%= jobs.image.url %>"
            alt=""
            style="width: 80px; height: 80px"
          />
          <div class="text-start ps-4">
            <h3 class="mb-3"><%= jobs.title %></h3>
            <span class="text-truncate me-3"
              ><i class="fa fa-map-marker-alt text-primary me-2"></i><%=
              jobs.location %></span
            >
            <span class="text-truncate me-3"
              ><i class="far fa-clock text-primary me-2"></i><%= jobs.jobType
              %></span
            >
            <span class="text-truncate me-0"
              ><i class="far fa-money-bill-alt text-primary me-2"></i><%=
              jobs.salaryRange %></span
            >
          </div>
        </div>

        <div class="mb-5">
          <h4 class="mb-3">Job description</h4>
          <p><%= jobs.description %></p>
        </div>

        <div class="">
          <h4 class="mb-4">Apply For The Job</h4>
          <% if(error.length >0){ %>
            <div class="alert alert-danger"><%= error %></div>
    
            <% } %> 
            <% if(success.length >0){ %>
            <div class="alert alert-success"><%= success %></div>
    
            <% } %>
          

          <% if (name) { %>
            <% if (alreadyApplied) { %>
              <div class="alert alert-info">
                You have already applied for this job.
              </div>
            <% } else { %>
              <form action="/job/apply/<%= jobs._id %>" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <label>Upload Resume (Images only)</label>
                  <input type="file" name="resume" class="form-control" accept="image/*" required>
                </div>
                <div class="form-group">
                  <label>Cover Letter</label>
                  <textarea name="coverLetter" class="form-control" rows="5"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Apply Now</button>
              </form>
            <% } %>
          <% } else { %>
            <div class="alert alert-warning">
              Please <a href="/login" class="text-primary">login</a> to apply for this job.
            </div>
          <% } %>
          
        </div>
      </div>

      <div class="col-lg-4">
        <div
          class="bg-light rounded p-5 mb-4 wow slideInUp"
          data-wow-delay="0.1s"
        >
          <h4 class="mb-4">Job Summery</h4>
          <p>
            <i class="fa fa-angle-right text-primary me-2"></i>Published On: <%= new Date(jobs.createdAt).toLocaleDateString('en-IN') %>
          </p>
          <p>
            <i class="fa fa-angle-right text-primary me-2"></i>Vacancy:<%=
            jobs.category %>
          </p>
          <p>
            <i class="fa fa-angle-right text-primary me-2"></i>Job Type:<%=
            jobs.jobType %>
          </p>
          <p>
            <i class="fa fa-angle-right text-primary me-2"></i>SalaryRanged: <%=
            jobs.salaryRange %>
          </p>
          <p>
            <i class="fa fa-angle-right text-primary me-2"></i>Location: <%=
            jobs.location %>
          </p>
          <p class="m-0">
            <i class="fa fa-angle-right text-primary me-2"></i>
            Date Line: <%= new Date(jobs.lastDateToApply).toLocaleDateString('en-IN') %>
          </p>
        </div>
        <div class="bg-light rounded p-5 wow slideInUp" data-wow-delay="0.1s">
          <h4 class="mb-4">Company Detail</h4>
          <p class="m-0">
            <i class="fa fa-angle-right text-primary me-2"></i>Name: <%=
            jobs.createdBy.companyName %>
          </p>
          <!-- <p class="m-0">
            <i class="fa fa-angle-right text-primary me-2"></i>Website: <%=
            jobs.companyWebsite %>
          </p>
          <p class="m-0">
            <i class="fa fa-angle-right text-primary me-2"></i>Email: <%=
            jobs.companyEmail %>
          </p>
          <p class="m-0">
            <i class="fa fa-angle-right text-primary me-2"></i>Phone: <%=
            jobs.companyPhone %>
          </p> -->
        </div>
      </div>
    </div>
  </div>
  <!-- Job Detail End -->






  <%- include('footer.ejs') %>
</div>
